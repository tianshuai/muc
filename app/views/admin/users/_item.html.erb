<tr id="user_<%= b.id%>" class="user_unaudited">
    <td><label><span class="btn-medium">选中</span><%=check_box_tag "content[ids][]", b.id %></label></td>
    <td><%= b.id%></td>
	<td><%= b.name %></td>
	<td><%= b.email %></td>
	<td><%= b.type_str %></td>
  	<td id="user_role_str_<%=b.id%>"><%= b.role_str %></td>
  <td>
    <%= b.created_at.strftime("%y-%m-%d %H:%M:%S") if b.created_at.present? %><br />
  </td>
	<td class="show_state_<%=b.id%>"><%=b.state==1 ? '正常' : '禁用'%></td>
  <td>
	<span class="btn_state_<%=b.id%>">
		<%if b.state==0%>
			<%=link_to "解禁" , { action: 'ajax_set_state', id: b.id, type: 1 }, :remote=>true,:method=>:post %> |
		<%else%>
			<%=link_to "禁用" , { action: 'ajax_set_state', id: b.id, type: 0 }, :remote=>true,:method=>:post %> |
		<%end%>
	</span>
    <%=link_to "删除", {action: 'destroy', id: b.id}, :confirm=>"确认执行此操作?", remote: true, method: :delete %>
  </td>
</tr>
