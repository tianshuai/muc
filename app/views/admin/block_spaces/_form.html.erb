<%= form_for([:admin,@block_space]) do |f| %>
  <% if @block_space.errors.any? %>
    <div id="error_explanation">
      <h2><%= @block_space.errors.count %>处错误提示: </h2>

      <ul>
      <% @block_space.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :mark, '标识：' %><br />
    <%= f.text_field :mark %>
  </div>
  <div class="field">
    <%= f.label :name, '栏目位名称：' %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :position_info, '内容' %><br />
    <%= f.text_area :position_info, size: '100*100' %>
  </div>
  <div class="field">
    <%= f.label :width, '宽度：' %><br />
    <%= f.number_field :width %>
  </div>
  <div class="field">
    <%= f.label :height, '高度：' %><br />
    <%= f.number_field :height %>
  </div>

  <div class="field">
    <%= f.label :state, '状态' %><br />
    <%= f.radio_button :state, 0 %>禁用&nbsp;
    <%= f.radio_button :state, 1 %>正常
  </div>
  <span blank20></span>
  <div class="actions">
    <%= f.submit %>
	<%=link_to '返回', admin_block_spaces_path %>
  </div>
<% end %>
