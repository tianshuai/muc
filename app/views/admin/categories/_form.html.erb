<%= form_for([:admin,@category]) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= @category.errors.count %>处错误提示: </h2>

      <ul>
      <% @category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, '名称：' %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :content, '描述' %>
    <%= f.text_area :content, size: '100*100' %>
  </div>
  <div class="field">
    <%= f.label :mark, '标识' %>
    <%= f.text_field :mark %>
  </div>
  <div class="field">
    <%= f.label :order, '排序' %>
    <%= f.number_field :order %>
  </div>
  <div class="field">
    <%= f.label :type, '类型' %>
    <%= f.radio_button :type, 1 %>新闻&nbsp;
    <%= f.radio_button :type, 2 %>作品&nbsp;
    <%= f.radio_button :type, 3 %>书籍
  </div>
  <div class="field">
    <%= f.label :stick, '是否推荐' %>
    <%= f.radio_button :stick, 0 %>否&nbsp;
    <%= f.radio_button :stick, 1 %>是
  </div>
  <div class="field">
    <%= f.label :state, '状态' %>
    <%= f.radio_button :state, 0 %>关闭&nbsp;
    <%= f.radio_button :state, 1 %>开启
  </div>
  <span class="blank20"></span>
  <div class="actions">
    <%= f.submit '保存' %>
	<%=link_to '返回', admin_categories_path %>
  </div>
<% end %>
