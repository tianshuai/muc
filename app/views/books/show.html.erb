<%=provide(:title, @post.title)%>
  <!--主体 start{-->
  <div class="main">
      <!--内容 start{-->
      <div class="wid">
          <!--当前位置 start{-->
          <%= render partial: 'path', locals: { post: @post, cate: nil } %>
          <!--}当前位置 end-->
          <!--主体内容 start{-->
          <%=render 'left_bar', categories: @categories %>
          <div class="right">
            <h2 class="name"><%=@post.title%></h2>
            <div class="date">发布时间：<%=@post.created_at.strftime("%Y.%m.%d")%></div>
              <div class="content">
                <%= raw @post.content %>
              </div>
            <!--管理选项-->
            <%#= render "admin_tools"%>
          </div>
          <!--}主体内容 end-->
      </div>
      <!--}内容 end-->
  </div>
  <!--}主体 end-->
