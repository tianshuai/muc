<%provide(:title, '学院丛书')%>
	<!--主体 start{-->
	<div class="main">

        <!--内容 start{-->
        <div class="wid">

            <!--学院丛书 start{-->
            <div class="books">
            	<h2 class="title">学院丛书</h2>
                <div class="more"><a href=""></a></div>
                <% if @books.present? %>
                  <ul class="ul_books">
                  <%@books.each do |b|%>
                      <li style="margin-bottom:20px;">
                          <em><a href=""><%=image_tag '11.jpg'%></a></em>
                          <h3><%= link_to truncate(b.title, length: 20), '#', title: b.title, target: '_blank' %></h3>
                          <p><%= truncate(b.content, length: 50) %></p>
                          <div class="readmore"><%= link_to 'Read More', '#', target: '_blank' %></div>
                      </li>
                  <%end%>
                  </ul>
                <%end%>
              </div>
                <!--分页 start{-->
                <div class="page">
                  <%=will_paginate @books if @books.present?%>
                </div>
                <!--}分页 end-->
            <!--}学院丛书 end-->
        </div>
        <!--}内容 end-->
    </div>
	<!--}主体 end-->
