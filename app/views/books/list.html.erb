<%provide(:title, '中国民族美术')%>
  <!--主体 start{-->
  <div class="main">
      <!--内容 start{-->
      <div class="wid" style="min-height: 300px;">
          <!--当前位置 start{-->
          <%= render partial: 'path', locals: { post: nil, cate: @current_cate } %>
          <!--}当前位置 end-->
          <!--主体内容 start{-->
          <%=render 'left_bar', categories: @categories %>
          <div class="right">
            <!--学院丛书 start{-->
            <div class="books">
                <h2 class="title">中国民族美术</h2>
                <div class="more"><a href=""></a></div>
                <% if @posts.present? %>
                  <ul class="ul_books">
                    <%@posts.each do |b|%>
                      <% if b.cover.present? %>
                          <li style="margin-bottom:20px;">
                              <em><%= link_to asset_b_tag(b.cover), b.view_url %></em>
                              <h3><%= link_to truncate(b.title, length: 20), b.view_url, title: b.title %></h3>
                              <p><%= truncate(strip_tags(b.content), length: 50) %></p>
                              <div class="readmore"><%= link_to 'Read More', b.view_url %></div>
                        </li>
                      <%end%>
                    <%end%>
                  </ul>
                <%end%>
              </div>
              <!--分页 start{-->
            <div class="page">
              <%=will_paginate @posts if @posts.present?%>
            </div>
            <!--}分页 end-->
            <!--}学院丛书 end-->
          </div>
          <!--}主体内容 end-->
      </div>
      <!--}内容 end-->
  </div>
  <!--}主体 end-->

