<%provide(:title, '学院丛书')%>
	<!--主体 start{-->
	<div class="main">

        <!--内容 start{-->
        <div class="wid" style="min-height: 300px;">

            <!--学院丛书 start{-->
            <div class="books">
            	<h2 class="title">中国民族美术</h2>
                <div class="more"><a href=""></a></div>
                <% if @books.present? %>
                  <ul class="ul_books">
                    <%@books.each do |b|%>
                      <% if b.cover.present? %>
                          <li style="margin-bottom:20px;">
                              <em><%= link_to asset_o_tag(b.cover), b.view_url, target: '_blank' %></em>
                              <h3><%= link_to truncate(b.title, length: 20), b.view_url, title: b.title, target: '_blank' %></h3>
                              <p><%= truncate(strip_tags(b.content), length: 50) %></p>
                              <div class="readmore"><%= link_to 'Read More', b.view_url, target: '_blank' %></div>
                          </li>
                      <%end%>
                    <%end%>
                  </ul>
                <%end%>
              </div>
                <!--分页 start{-->
                <div class="page">
                  <%=will_paginate @books if @books.present?%>
                </div>
                <!--}分页 end-->
            <!--}学院丛书 end-->
        </div>
        <!--}内容 end-->
    </div>
	<!--}主体 end-->
