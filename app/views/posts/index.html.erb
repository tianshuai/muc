<%=provide(:title, '新闻列表')%>
<h1>新闻列表</h1>

<table>
  <tr>
    <th>标题</th>
    <th>内容</th>
    <th>创建时间</th>

  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <%if post.user.present?%>
      <td><%= post.user.name  %></td>
    <%else%>
       <td>用户不存在</td>     
    <%end%>
    <td><%=post.created_at.strftime("%H")%></td>
    <td><%= link_to '显示', post %></td>
    <td><%= link_to '编辑', edit_post_path(post) %></td>
    <td><%= link_to '删除', post, method: :delete, data: { confirm: '确定删除?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '发布新闻', new_post_path %>
